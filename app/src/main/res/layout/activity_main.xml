<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CCC3E1"
    android:gravity="center_horizontal"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/etBillAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:textSize="20dp"
        android:inputType="numberDecimal"
        android:gravity="center"
        android:textColor="#C9160C3C"
        android:layout_marginTop="45sp"
        android:layout_marginBottom="15sp"
        android:hint="Amount(in ₹)"
        android:textStyle="italic|bold"
        tools:layout_editor_absoluteX="100dp"
        tools:layout_editor_absoluteY="196dp" />

    <EditText
        android:id="@+id/etTipPercentage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#C9160C3C"
        android:gravity="center"
        android:textSize="20dp"
        android:ems="10"
        android:inputType="numberDecimal"
        android:layout_marginBottom="15sp"
        android:textStyle="italic|bold"
        android:hint="Tip(in%)"
        tools:layout_editor_absoluteX="99dp"
        tools:layout_editor_absoluteY="301dp" />

    <Button
        android:id="@+id/btnCalculate"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15sp"
        android:textSize="15sp"
        android:text="Calculate"
        android:textColor="#2B1447"
        android:textStyle="bold|italic"
        android:background="#CAC1E1"
        tools:layout_editor_absoluteX="137dp"
        tools:layout_editor_absoluteY="382dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:textColor="#730202"
        android:text="Tip:"
        android:textStyle="bold"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="164dp"
        tools:layout_editor_absoluteY="460dp" />

    <TextView
        android:id="@+id/tvTip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10sp"
        android:textColor="#056710"
        android:text="₹ 0.00"
        android:textStyle="bold|italic"
        android:textSize="17sp"
        tools:layout_editor_absoluteX="211dp"
        tools:layout_editor_absoluteY="460dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5sp"
        android:textStyle="bold"
        android:textColor="#570202"
        android:textSize="18sp"
        android:text="Total:"
        tools:layout_editor_absoluteX="149dp"
        tools:layout_editor_absoluteY="504dp" />

    <TextView
        android:id="@+id/tvTotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold|italic"
        android:textColor="#010A43"
        android:layout_marginBottom="10sp"
        android:textSize="19dp"
        android:text="₹ 0.00"
        tools:layout_editor_absoluteX="211dp"
        tools:layout_editor_absoluteY="504dp" />


    <Button
        android:id="@+id/btnSplit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#CAC1E1"
        android:text="Split"
        android:textColor="#2B1447"
        android:textSize="14sp"
        android:textStyle="bold|italic"
        tools:layout_editor_absoluteX="137dp"
        tools:layout_editor_absoluteY="382dp">

    </Button>

    <EditText
        android:id="@+id/etnpersons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:textStyle="italic|bold"
        android:textColor="#C9160C3C"
        android:hint="Number of Persons"
        android:inputType="number"
        android:textSize="18dp"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/tvtotalPerPerson"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:textColor="#6A0101"
        android:textStyle="bold"
        android:layout_marginBottom="10dp"
        android:text="Total Per Person:"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/tvTtlpp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#3A0243"
        android:textStyle="bold|italic"
        android:textSize="19dp"
        android:text="₹ 0.00"
        android:visibility="gone"/>

    <Button
        android:id="@+id/btnClear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:background="#CAC1E1"
        android:text="Clear"
        android:textColor="#2B1447"
        android:textSize="15sp"
        android:textStyle="bold|italic"
        tools:layout_editor_absoluteX="137dp"
        tools:layout_editor_absoluteY="382dp" />


</LinearLayout>